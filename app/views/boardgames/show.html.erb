
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <%= image_tag @boardgame.img, :width => "400", :class => "img-fluid", :id => "boardgame_image" %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
      <div>
        <%=@boardgame.name %>
      </div>
      <div>
            <%= @boardgame.description %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
      <div id="collection_form">
        <% if current_user.in_collection?(@boardgame) %>
          <%= render 'remove_from_collection' %>
        <% else %>
          <%= render 'add_to_collection' %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <%= link_to 'Back', boardgames_path %>
    </div>
  </div>
</div>
