<p id="notice"><%= notice %></p>

<h1>Listing Boardgames</h1>

<div>

<%= form_tag(boardgames_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Boardgames" %>
<%= submit_tag "Search" %>
<% end %>


</div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boardgames.each do |boardgame| %>
      <tr>
        <td><%= boardgame.id %></td>
        <td><%= boardgame.name %></td>
        <td><%= link_to 'Show', boardgame_path(boardgame) %></td>
        <td><%= link_to 'Edit', edit_boardgame_path(boardgame) %></td>
        <td><%= link_to 'Destroy', boardgame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Boardgame', new_boardgame_path %>
